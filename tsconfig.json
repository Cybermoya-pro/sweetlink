{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "moduleResolution": "node",
    "paths": {
      "@/*": ["../../src/*"],
      "@tests/*": ["../../tests/*"],
      "@sweetistics/*": ["../../packages/*/src/index.ts", "../../packages/*/src/index.tsx", "../../packages/*/src"]
    }
  },
  "include": ["./src/**/*", "./daemon/src/**/*"],
  "exclude": ["./src/**/*.test.ts", "./daemon/src/**/*.test.ts"]
}
