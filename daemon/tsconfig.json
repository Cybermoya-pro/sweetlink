{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "paths": {
      "@sweetlink/shared": ["../shared/src/index.ts"],
      "@sweetlink/shared/node": ["../shared/src/node.ts"]
    }
  },
  "include": ["./src/**/*"],
  "exclude": ["./src/**/*.test.ts"]
}
